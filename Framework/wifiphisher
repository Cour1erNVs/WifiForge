#!/bin/bash

# Initialize variables
E_ARG=""
P_ARG=""
K_ARG=false

# Function to show usage and exit
usage() {
    echo "Usage: $0 -e <ANYTHING> -p <ANYTHING> -kB"
    exit 1
}

# Parse the arguments
while (( "$#" )); do
    case "$1" in
        -e)
            if [ -n "$2" ]; then
                E_ARG="$2"
                shift 2
            else
                usage
            fi
            ;;
        -p)
            if [ -n "$2" ]; then
                P_ARG="$2"
                shift 2
            else
                usage
            fi
            ;;
        -kB)
            K_ARG=true
            shift
            ;;
        *)
            usage
            ;;
    esac
done

# Validate that all required arguments are provided
if [ -z "$E_ARG" ] || [ -z "$P_ARG" ] || [ "$K_ARG" = false ]; then
    usage
fi

# Output the stored variables (for debugging or further processing)
echo "E_ARG: $E_ARG"
echo "P_ARG: $P_ARG"
echo "K_ARG: $K_ARG"

# Your script logic here...
